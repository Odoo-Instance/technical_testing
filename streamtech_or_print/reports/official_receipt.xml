<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_official_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="detail" t-value="doc.get_details()"/>
                <div class="page mt32" style="font-size: 3mm;">
                    <style>
                        .left-part {
                            background-color: blue; 
                            min-width: 55mm !important; 
                            margin: 0; 
                            padding: 18mm 0 0 0; 
                            font-size: 2.5mm; 
                            text-align: right; 
                            vertical-align: top;        
                        }

                        .left-part-field {
                            display: block;
                        }

                        .right-part {
                            background-color: teal; 
                            margin: 0;  
                            padding: 27mm 0 0 0; 
                            font-size: 2.5mm;
                            vertical-align: top;        
                        }

                        .right-part-field {
                            display: block;
                            padding-bottom: 1mm;
                        }
                    </style>
                    <table cellpadding="0" cellspacing="0">
                        <tbody>
                            <tr>
                                <td class="left-part">
                                    <span class="left-part-field" >&amp;nbsp; 0.00<!-- installation fee --></span>
                                    <span class="left-part-field" >&amp;nbsp; 0.00<!-- subscription fee --></span>
                                    <span class="left-part-field" >&amp;nbsp; <!-- deposit --></span>
                                    <span class="left-part-field" >&amp;nbsp; <!-- extension tv --></span>
                                    <span class="left-part-field" >&amp;nbsp; <!-- modem --></span>

                                    <span class="left-part-field" >&amp;nbsp;</span>
                                    <span class="left-part-field" >&amp;nbsp;</span>

                                    <span class="left-part-field" t-esc="'{0:,.2f}'.format(detail['total_sales'])"></span>
                                    <span class="left-part-field" t-esc="'{0:,.2f}'.format(detail['vat'])"></span>
                                    <span class="left-part-field" t-esc="'{0:,.2f}'.format(detail['untaxed_amount'])"></span>
                                    <span class="left-part-field" t-esc="'{0:,.2f}'.format(detail['tax_withholding'])"></span>
                                    <span class="left-part-field" t-esc="'{0:,.2f}'.format(detail['vat'])"></span>
                                    <span class="left-part-field" t-esc="'{0:,.2f}'.format(detail['total_amount'])"></span>
                                    <span class="left-part-field" t-field="doc.payment_date" t-options='{"widget": "date", "format": "MMMM dd, yyyy"}'></span>
                                </td>
                                <td class="right-part">
                                    <span class="right-part-field" style="padding-left: 64mm;" t-field="doc.payment_date" t-options='{"widget": "date", "format": "MMMM dd, yyyy"}'></span>
                                    <span class="right-part-field" style="padding-left: 30mm;" t-field="doc.partner_id.name"></span>
                                    <div class="right-part-field" style="padding-left: 20mm">
                                        <span t-field="doc.partner_id.street"></span>
                                        <span t-field="doc.partner_id.street2"></span>
                                        <span t-field="doc.partner_id.city"></span>
                                        <span t-field="doc.partner_id.state_id.name"></span>
                                    </div>

                                    <!--
                                    <span t-field="doc.partner_id.industry_id.name"></span>
                                    <span t-field="doc.partner_id.vat"></span>
                                    -->

                                    <span class="right-part-field" >&amp;nbsp;</span>

                                    <span class="right-part-field" style="padding-left: 35mm" t-esc="doc.amount_to_text(doc.amount, doc.currency_id)"></span>

                                    <span style="position: absolute; left: 124mm; top: 52mm;" t-field="doc.amount" t-field-options='{"widget": False}'></span>

                                    <span style="position: absolute; left: 85mm; top: 58mm;" t-field="doc.communication"></span>
                                </td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>