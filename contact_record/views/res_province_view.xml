<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_province_tree" model="ir.ui.view">
        <field name="name">res.province.tree</field>
        <field name="model">res.province</field>
        <field name="arch" type="xml">
            <tree string="Province">
                <field name="name"/>
                <field name="country_id"/>
                <field name="region_id"/>
            </tree>
        </field>
    </record>

    <record id="res_province_form" model="ir.ui.view">
        <field name="name">res.province.form</field>
        <field name="model">res.province</field>
        <field name="arch" type="xml">
            <form string="Province">
            <sheet>
                <div class="oe_title">
                    <label for="name" string="Province name" class="oe_edit_only"/>
                    <h1><field name="name"/></h1>
                </div>
                <group>
                    <group>
                        <field name="country_id"/>
                        <field name="region_id"/>
                    </group>

                    <group>
                    </group>
                </group> 
            </sheet> 
            </form>
        </field>
    </record>

    <record id="action_province" model="ir.actions.act_window">
        <field name="name">Province</field>
        <field name="res_model">res.province</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="res_province_tree"/>
    </record>

    <menuitem id="province_menu" name="Provinces" parent="contacts.menu_localisation" action="action_province" sequence="0"/>

</odoo>
