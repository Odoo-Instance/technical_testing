<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_form" model="ir.ui.view">
        <field name="name">view.purchase.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="counter_receipt_ref" readonly="1"/>
                <field name="counter_receipt_date"/>
                <field name="total_amount_vendor_bills" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
